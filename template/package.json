{
  "name": "WBoilerplate",
  "version": "0.0.3",
  "private": true,
  "scripts": {
    "clean-build": "watchman watch-del-all && rm -rf ./node_modules && cd ios && rm -rf ./Pods && rm -rf ./Podfile.lock && cd .. && yarn && cd ios && pod update && pod install --repo-update && cd .. && cd android && ./gradlew clean && cd .. && yarn test-ios && yarn test-android",
    "test-ios": "cd ios && pod install --repo-update && cd .. && react-native bundle --platform ios --dev false --entry-file index.js --bundle-output ios/main.jsbundle --assets-dest ios",
    "test-android": "cd android && ./gradlew clean && cd .. && react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res",
    "typescript": "tsc",
    "android": "yarn android:adb && npx react-native run-android",
    "android:release": "yarn android --variant release",
    "android:adb": "adb reverse tcp:8081 tcp:8081",
    "ios": "npx react-native run-ios",
    "ios:release": "yarn ios --configuration Release",
    "ios:pods": "npx pod-install",
    "ios:pods:ru": "cd ios && pod install --repo-update && cd ..",
    "rename": "npx react-native-rename",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint '*/**/*.{ts,tsx}' --fix",
    "format": "prettier --write './**/*.{ts,tsx,js,jsx}' --config ./.prettierrc",
    "precommit": "yarn format && git add .",
    "prepare": "husky install",
    "release": "standard-version",
    "postinstall": "patch-package",
    "afterRelease": "export PACKAGE_VERSION=$(cat package.json | grep version | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git add -A && git commit -m 'build[skip ci]: '$PACKAGE_VERSION && git push https://github.com/thisiswunder/wunder-boilerplate.git --all --force && git push --tags",
    "generate": "node ./scripts/createScripts.js && yarn format"
  },
  "dependencies": {
    "@kanzitelli/if-component": "^0.3.0",
    "@react-native-community/blur": "^4.1.0",
    "@react-native-community/datetimepicker": "^6.3.0",
    "@react-native-community/netinfo": "^9.3.0",
    "@react-native-picker/picker": "^2.4.2",
    "@react-navigation/native": "^6.0.11",
    "formik": "^2.2.9",
    "lodash": "^4.17.21",
    "react": "18.0.0",
    "react-native": "0.69.2",
    "react-native-gesture-handler": "^2.5.0",
    "react-native-mmkv": "^2.4.3",
    "react-native-reanimated": "^3.0.0-rc.0",
    "react-native-safe-area-context": "^4.3.1",
    "react-native-screens": "^3.15.0",
    "react-native-ui-lib": "^6.18.2",
    "zustand": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@commitlint/config-conventional": "^17.0.3",
    "@react-native-community/eslint-config": "^2.0.0",
    "@tsconfig/react-native": "^2.0.2",
    "@types/jest": "^26.0.23",
    "@types/react-native": "^0.69.3",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "changelog-parser": "^2.8.1",
    "commitlint": "^17.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-native-wcandillon": "^3.8.0",
    "eslint-formatter-rdjson": "^1.0.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-reanimated": "^1.2.7",
    "fs": "^0.0.1-security",
    "husky": "^8.0.0",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "^0.70.3",
    "patch-package": "^6.4.7",
    "prettier": "^2.7.1",
    "prompt": "^1.3.0",
    "react-native-rename": "^2.9.0",
    "react-test-renderer": "18.0.0",
    "standard-version": "^9.5.0",
    "typescript": "^4.4.4",
    "yargs": "^17.5.1"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
